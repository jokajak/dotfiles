{
    "workbench.iconTheme": "vscode-icons",

    "editor.fontFamily": "FiraCode-Retina",
    "editor.renderWhitespace": "selection",
    "editor.cursorStyle": "line-thin",
    "editor.fontLigatures": true,

    "terminal.external.osxExec": "kitty.app",

    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    "python.linting.pylintEnabled": true,
    "python.linting.pycodestyleEnabled": false,
    "python.pythonPath": "/usr/local/bin/python3",

    "workspaceExplorer.workspaceStorageDirectory": "/Users/jkayse/.vscode/workspaces/",
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.wordWrapColumn": 78,
        "editor.defaultFormatter": "yzhang.markdown-all-in-one"
    },

    "plantuml.server": "http://localhost:8079",
    "plantuml.render": "PlantUMLServer",
    "atlascode.jira.workingSite": {
        "baseUrlSuffix": "atlassian.net"
    },
    "yaml.schemas": {
        "file:///Users/jkayse/.vscode/extensions/atlassian.atlascode-2.7.0/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
    },
    "atlascode.jira.workingProject": {
        "id": "15502",
        "name": "Amtrak",
        "key": "FEN"
    },
    "atlascode.bitbucket.statusbar.enabled": false,
    "atlascode.jira.statusbar.enabled": false,
    // Custom tags for the parser to use
    "yaml.customTags": [
        "!And",
        "!If",
        "!Not",
        "!Equals",
        "!Or",
        "!FindInMap sequence",
        "!Base64",
        "!Cidr",
        "!Ref",
        "!Sub",
        "!GetAtt",
        "!GetAZs",
        "!ImportValue",
        "!Select",
        "!Select sequence",
        "!Split",
        "!Join sequence"
    ],
    // Enable/disable default YAML formatter (requires restart)
    "yaml.format.enable": true,
    "git.autofetch": true,
    "[python]": {
        "editor.tabSizes": 4
    },

    "vim.easymotion": true,
    "vim.camelCaseMotion.enable": true,
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [":"],
            "commands": [
                "workbench.action.showCommands",
            ]
        },
        {
            "before": ["j"],
            "after": ["g", "j"]
        }
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        }
    ],
    "indenticator.showHover": true,
    "terminal.integrated.shell.osx": "/usr/local/bin/fish",
    "workbench.colorTheme": "Visual Studio Light",
    "workbench.colorCustomizations": {},
    "materialTheme.accent": "Remove accents",
    "lua.luacheckPath": "~/.luarocks/bin/luacheck",
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 120,
    "workbench.startupEditor": "welcomePageInEmptyWorkbench",
    "window.restoreWindows": "all",
    "markdown-preview-enhanced.scrollSync": true,
    "git.ignoreLegacyWarning": true,
    "atlascode.jira.jqlList": [
        {
            "id": "ffaf70bd-f62d-4cff-a9f9-5b8ff8351e80",
            "enabled": true,
            "name": "My novetta Issues",
            "query": "assignee = currentUser() ORDER BY lastViewed DESC ",
            "siteId": "249aa06f-0871-4ef5-ae37-f2dd9a0809b0",
            "monitor": true
        }
    ],
    "gitlens.advanced.messages": {
        "suppressGitVersionWarning": true
    },
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "cSpell.userWords": [
        "ansible",
        "cidr",
        "cidrs",
        "dhcp",
        "firewalld",
        "novetta",
        "rhel",
        "splunk",
        "sshd",
        "stig",
        "subnet",
        "subnets",
        "winrm"
    ],
    "files.trimFinalNewlines": true,
    "vsicons.dontShowNewVersionMessage": true,
    "atlascode.jira.lastCreateSiteAndProject": {
        "siteId": "249aa06f-0871-4ef5-ae37-f2dd9a0809b0",
        "projectKey": "CR"
    },
    "ansible.autocompletion": false,
    "ansible.fileCopyConfig": [
    ],
    "terminal.integrated.shell.linux": "/bin/bash",
    "redhat.telemetry.enabled": false,
    "Lua.telemetry.enable": false,
    "editor.accessibilitySupport": "off",
    "python.testing.pytestEnabled": true,
    "python.venvFolders": [
        "~/.local/venv/"
    ],
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    }
}
